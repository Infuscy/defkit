go.property("action_id", hash(""))
go.property("target_group", hash("on_button_released"))

function init(self)
	msg.post(".", "acquire_input_focus")
end

function final(self)
	msg.post(".", "release_input_focus")
end

function on_input(self, action_id, action)
	if action_id == self.action_id and action.released then
		msg.post(".", hash("do_actions"), {target_group=self.target_group})
	end
end
